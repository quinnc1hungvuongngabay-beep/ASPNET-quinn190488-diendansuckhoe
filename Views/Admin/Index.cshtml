@model dynamic
@{
    ViewData["Title"] = "Trang quản trị";
    Layout = "_AdminLayout";
}

<div class="p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Dashboard Quản trị</h1>
    
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-2 bg-blue-100 rounded-lg">
                    <i data-lucide="users" class="h-6 w-6 text-blue-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-600">Người dùng</p>
                    <p class="text-2xl font-bold text-gray-900">@Model.TotalUsers</p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-2 bg-green-100 rounded-lg">
                    <i data-lucide="file-text" class="h-6 w-6 text-green-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-600">Bài viết</p>
                    <p class="text-2xl font-bold text-gray-900">@Model.TotalPosts</p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-2 bg-yellow-100 rounded-lg">
                    <i data-lucide="message-circle" class="h-6 w-6 text-yellow-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-600">Bình luận</p>
                    <p class="text-2xl font-bold text-gray-900">@Model.TotalComments</p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-2 bg-purple-100 rounded-lg">
                    <i data-lucide="folder" class="h-6 w-6 text-purple-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-600">Danh mục</p>
                    <p class="text-2xl font-bold text-gray-900">@Model.TotalCategories</p>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent Posts -->
        <div class="bg-white rounded-lg shadow">
            <div class="p-6 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">Bài viết gần đây</h2>
            </div>
            <div class="p-6">
                <div class="space-y-4">
                    @foreach (var post in Model.RecentPosts)
                    {
                        <div class="flex items-start space-x-3">
                            <div class="w-2 h-2 bg-blue-600 rounded-full mt-2"></div>
                            <div class="flex-1">
                                <h3 class="text-sm font-medium text-gray-900">@post.Title</h3>
                                <p class="text-xs text-gray-500">@post.Author.FullName • @post.CreatedAt.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Users -->
        <div class="bg-white rounded-lg shadow">
            <div class="p-6 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">Người dùng mới</h2>
            </div>
            <div class="p-6">
                <div class="space-y-4">
                    @foreach (var user in Model.RecentUsers)
                    {
                        <div class="flex items-center space-x-3">
                            <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                                <span class="text-xs font-medium">@user.FullName.Substring(0, 1)</span>
                            </div>
                            <div class="flex-1">
                                <h3 class="text-sm font-medium text-gray-900">@user.FullName</h3>
                                <p class="text-xs text-gray-500">@user.Email • @user.CreatedAt.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    lucide.createIcons();
</script>