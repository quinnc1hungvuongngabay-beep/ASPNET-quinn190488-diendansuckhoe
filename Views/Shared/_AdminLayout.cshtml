<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin HealthForum</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="w-64 bg-white shadow-lg">
            <div class="p-6">
                <h1 class="text-xl font-bold text-gray-900">Admin Panel</h1>
            </div>
            <nav class="mt-6">
                <a href="/Admin" class="flex items-center px-6 py-3 text-gray-700 hover:bg-gray-100">
                    <i data-lucide="home" class="h-5 w-5 mr-3"></i>
                    Dashboard
                </a>
                <a href="/Admin/Posts" class="flex items-center px-6 py-3 text-gray-700 hover:bg-gray-100">
                    <i data-lucide="file-text" class="h-5 w-5 mr-3"></i>
                    Quản lý bài viết
                </a>
                <a href="/Admin/Users" class="flex items-center px-6 py-3 text-gray-700 hover:bg-gray-100">
                    <i data-lucide="users" class="h-5 w-5 mr-3"></i>
                    Quản lý người dùng
                </a>
                <a href="/" class="flex items-center px-6 py-3 text-gray-700 hover:bg-gray-100">
                    <i data-lucide="arrow-left" class="h-5 w-5 mr-3"></i>
                    Về trang chủ
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 overflow-auto">
            <!-- Header -->
            <header class="bg-white shadow-sm border-b">
                <div class="px-6 py-4">
                    <div class="flex justify-between items-center">
                        <h2 class="text-lg font-semibold text-gray-900">@ViewData["Title"]</h2>
                        <div class="flex items-center space-x-4">
                            <span class="text-sm text-gray-600">Xin chào, @User.Identity.Name</span>
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="text-sm text-red-600 hover:text-red-800">Đăng xuất</button>
                            </form>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>