<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthForum</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/lucide/0.344.0/lucide.min.css" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
</head>
<body class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex items-center">
                    <a href="/" class="flex items-center space-x-2">
                        <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                            <i data-lucide="heart" class="h-5 w-5 text-white"></i>
                        </div>
                        <span class="text-xl font-bold text-gray-900">HealthForum</span>
                    </a>
                </div>

                <!-- Search Bar -->
                <div class="flex-1 max-w-lg mx-8">
                    <div class="relative">
                        <input type="text" placeholder="Tìm kiếm bài viết, chủ đề..." 
                               class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <i data-lucide="search" class="absolute left-3 top-2.5 h-5 w-5 text-gray-400"></i>
                    </div>
                </div>

                <!-- Navigation -->
                <nav class="flex items-center space-x-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="/Home/CreatePost" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                            <i data-lucide="plus" class="h-4 w-4 inline-block mr-2"></i>
                            Tạo bài viết
                        </a>
                        <button class="p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg">
                            <i data-lucide="bell" class="h-5 w-5"></i>
                        </button>
                        <div class="relative group">
                            <button class="flex items-center space-x-2 p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg">
                                <i data-lucide="user" class="h-5 w-5"></i>
                                <span>@User.Identity.Name</span>
                            </button>
                            <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 hidden group-hover:block">
                                <a href="/Account/Profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <i data-lucide="user" class="h-4 w-4 inline-block mr-2"></i>
                                    Thông tin tài khoản
                                </a>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    var userManager = Context.RequestServices.GetService<Microsoft.AspNetCore.Identity.UserManager<HealthForumMVC.Models.ApplicationUser>>();
                                    var currentUser = await userManager.GetUserAsync(User);
                                    if (currentUser?.Role == HealthForumMVC.Models.UserRole.Admin)
                                    {
                                        <a href="/Admin" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                            <i data-lucide="settings" class="h-4 w-4 inline-block mr-2"></i>
                                            Quản trị
                                        </a>
                                    }
                                }
                                <form asp-controller="Account" asp-action="Logout" method="post" class="block">
                                    <button type="submit" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                        <i data-lucide="log-out" class="h-4 w-4 inline-block mr-2"></i>
                                        Đăng xuất
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a href="/Account/Login" class="text-gray-600 hover:text-gray-900 px-4 py-2 rounded-lg hover:bg-gray-100 transition-colors">
                            Đăng nhập
                        </a>
                        <a href="/Account/Register" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                            Đăng ký
                        </a>
                    }
                </nav>
            </div>
        </div>
    </header>

    <div class="flex">
        <!-- Sidebar -->
        <aside class="w-64 bg-white shadow-sm border-r border-gray-200 min-h-screen">
            <div class="p-6">
                <nav class="space-y-2">
                    <a href="/" class="flex items-center space-x-3 text-gray-700 p-3 rounded-lg hover:bg-gray-100">
                        <i data-lucide="home" class="h-5 w-5"></i>
                        <span>Trang chủ</span>
                    </a>
                    <a href="/Home/Trending" class="flex items-center space-x-3 text-gray-700 p-3 rounded-lg hover:bg-gray-100">
                        <i data-lucide="trending-up" class="h-5 w-5"></i>
                        <span>Thịnh hành</span>
                    </a>
                    <a href="/Home/Saved" class="flex items-center space-x-3 text-gray-700 p-3 rounded-lg hover:bg-gray-100">
                        <i data-lucide="bookmark" class="h-5 w-5"></i>
                        <span>Đã lưu</span>
                    </a>
                </nav>

                <div class="mt-8">
                    <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3">Danh mục</h3>
                    <nav class="space-y-1">
                        <a href="/Home/Category/1" class="flex items-center space-x-3 text-gray-700 p-2 rounded-lg hover:bg-gray-100">
                            <i data-lucide="heart" class="h-4 w-4 text-red-500"></i>
                            <span class="text-sm">Sức khỏe tổng quát</span>
                        </a>
                        <a href="/Home/Category/2" class="flex items-center space-x-3 text-gray-700 p-2 rounded-lg hover:bg-gray-100">
                            <i data-lucide="brain" class="h-4 w-4 text-purple-500"></i>
                            <span class="text-sm">Sức khỏe tâm thần</span>
                        </a>
                        <a href="/Home/Category/3" class="flex items-center space-x-3 text-gray-700 p-2 rounded-lg hover:bg-gray-100">
                            <i data-lucide="apple" class="h-4 w-4 text-green-500"></i>
                            <span class="text-sm">Dinh dưỡng</span>
                        </a>
                    </nav>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1">
            @RenderBody()
        </main>
    </div>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>