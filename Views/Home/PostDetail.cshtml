@model HealthForumMVC.Models.Post
@{
    ViewData["Title"] = Model.Title;
}

<div class="p-6 max-w-4xl mx-auto space-y-6">
    <!-- Post Content -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
        <!-- Post Header -->
        <div class="flex items-start justify-between mb-6">
            <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center">
                    <span class="text-white font-semibold text-lg">@Model.Author.FullName.Substring(0, 1)</span>
                </div>
                <div>
                    <div class="flex items-center space-x-2">
                        <h3 class="font-semibold text-gray-900">@Model.Author.FullName</h3>
                        @if (Model.Author.Role == HealthForumMVC.Models.UserRole.Admin)
                        {
                            <span class="bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full">Admin</span>
                        }
                        <span class="text-gray-500">•</span>
                        <span class="text-sm text-gray-500">@Model.Author.Reputation điểm uy tín</span>
                    </div>
                    <div class="flex items-center space-x-2 text-sm text-gray-500">
                        <span>@@@Model.Author.UserName</span>
                        <span>•</span>
                        <span>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                        <span>•</span>
                        <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-xs">
                            @Model.Category.Name
                        </span>
                    </div>
                </div>
            </div>
            @if (Model.IsPinned)
            {
                <div class="flex items-center space-x-2 text-blue-600">
                    <i data-lucide="pin" class="h-5 w-5"></i>
                    <span class="text-sm font-medium">Bài viết được ghim</span>
                </div>
            }
        </div>

        <!-- Post Title -->
        <h1 class="text-3xl font-bold text-gray-900 mb-6">@Model.Title</h1>

        <!-- Post Content -->
        <div class="prose max-w-none mb-8">
            <div class="text-gray-700 leading-relaxed whitespace-pre-line">@Model.Content</div>
        </div>

        <!-- Post Stats -->
        <div class="flex items-center justify-between pt-6 border-t border-gray-200">
            <div class="flex items-center space-x-6 text-sm text-gray-500">
                <div class="flex items-center space-x-1">
                    <i data-lucide="eye" class="h-4 w-4"></i>
                    <span>@Model.ViewCount lượt xem</span>
                </div>
                <div class="flex items-center space-x-1">
                    <i data-lucide="heart" class="h-4 w-4"></i>
                    <span>@Model.LikeCount lượt thích</span>
                </div>
                <div class="flex items-center space-x-1">
                    <i data-lucide="message-circle" class="h-4 w-4"></i>
                    <span>@Model.CommentCount bình luận</span>
                </div>
            </div>
            <div class="flex items-center space-x-3">
                <button class="flex items-center space-x-2 px-4 py-2 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors">
                    <i data-lucide="heart" class="h-4 w-4"></i>
                    <span>Thích</span>
                </button>
                <button class="flex items-center space-x-2 px-4 py-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors">
                    <i data-lucide="bookmark" class="h-4 w-4"></i>
                    <span>Lưu</span>
                </button>
                <button class="flex items-center space-x-2 px-4 py-2 text-gray-600 hover:text-green-600 hover:bg-green-50 rounded-lg transition-colors">
                    <i data-lucide="share-2" class="h-4 w-4"></i>
                    <span>Chia sẻ</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Comments Section -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
        <h2 class="text-xl font-bold text-gray-900 mb-6">
            Bình luận (@Model.CommentCount)
        </h2>

        <!-- Add Comment Form -->
        @if (User.Identity.IsAuthenticated)
        {
            <form asp-action="AddComment" method="post" class="mb-8 p-4 bg-gray-50 rounded-lg">
                <input type="hidden" name="postId" value="@Model.Id" />
                <textarea name="content" placeholder="Viết bình luận của bạn..." 
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"
                          rows="3" required></textarea>
                <div class="flex justify-end mt-3">
                    <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        <i data-lucide="send" class="h-4 w-4 inline-block mr-2"></i>
                        Gửi bình luận
                    </button>
                </div>
            </form>
        }
        else
        {
            <div class="mb-8 p-4 bg-gray-50 rounded-lg text-center">
                <p class="text-gray-600 mb-3">Bạn cần đăng nhập để bình luận</p>
                <a href="/Account/Login" class="inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                    Đăng nhập
                </a>
            </div>
        }

        <!-- Comments List -->
        <div class="space-y-6">
            @if (Model.Comments.Any())
            {
                @foreach (var comment in Model.Comments.OrderBy(c => c.CreatedAt))
                {
                    <div class="flex space-x-4">
                        <div class="w-10 h-10 bg-gray-600 rounded-full flex items-center justify-center flex-shrink-0">
                            <span class="text-white font-semibold">@comment.Author.FullName.Substring(0, 1)</span>
                        </div>
                        <div class="flex-1">
                            <div class="bg-gray-50 rounded-lg p-4">
                                <div class="flex items-center space-x-2 mb-2">
                                    <h4 class="font-semibold text-gray-900">@comment.Author.FullName</h4>
                                    <span class="text-sm text-gray-500">@comment.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                                <p class="text-gray-700">@comment.Content</p>
                            </div>
                            <div class="flex items-center space-x-4 mt-2 text-sm text-gray-500">
                                <button class="hover:text-red-600 flex items-center space-x-1">
                                    <i data-lucide="heart" class="h-3 w-3"></i>
                                    <span>Thích (@comment.LikeCount)</span>
                                </button>
                                <button class="hover:text-blue-600">Trả lời</button>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-8 text-gray-500">
                    <i data-lucide="message-circle" class="h-12 w-12 mx-auto mb-3 text-gray-300"></i>
                    <p>Chưa có bình luận nào. Hãy là người đầu tiên bình luận!</p>
                </div>
            }
        </div>
    </div>

    <!-- Back to Home -->
    <div class="text-center">
        <a href="/" class="inline-flex items-center space-x-2 text-blue-600 hover:text-blue-800 font-medium">
            <i data-lucide="arrow-left" class="h-4 w-4"></i>
            <span>Quay lại trang chủ</span>
        </a>
    </div>
</div>

<script>
    lucide.createIcons();
</script>