@model HealthForumMVC.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<div class="p-6 max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
        <div class="mb-8">
            <h1 class="text-2xl font-bold text-gray-900 mb-2">Thông tin tài khoản</h1>
            <p class="text-gray-600">Cập nhật thông tin cá nhân của bạn</p>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                <p class="text-green-800">@TempData["Success"]</p>
            </div>
        }

        <form asp-action="Profile" method="post" class="space-y-6">
            <div>
                <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-2">Họ tên</label>
                <input asp-for="FullName" type="text" 
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="Nhập họ tên đầy đủ">
                <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                <input asp-for="Email" type="email" 
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="Nhập địa chỉ email">
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Bio" class="block text-sm font-medium text-gray-700 mb-2">Tiểu sử</label>
                <textarea asp-for="Bio" rows="4"
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"
                          placeholder="Viết vài dòng về bản thân..."></textarea>
                <span asp-validation-for="Bio" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="AvatarUrl" class="block text-sm font-medium text-gray-700 mb-2">Avatar URL</label>
                <input asp-for="AvatarUrl" type="url" 
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="https://example.com/avatar.jpg">
                <span asp-validation-for="AvatarUrl" class="text-red-500 text-sm"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <div class="flex items-center justify-between pt-6 border-t border-gray-200">
                <a href="/" class="text-gray-600 hover:text-gray-800 font-medium">
                    ← Quay lại trang chủ
                </a>
                <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    <i data-lucide="save" class="h-4 w-4 inline-block mr-2"></i>
                    Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    lucide.createIcons();
</script>